@{
    ViewBag.Title = "Index";
}

@Scripts.Render("~/Scripts/Movies/index.js")

<h2>Movies</h2>

<div class="top">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <input class="form-control" type="text" name="searchKey" id="searchBox" placeholder="search movies" />
</div>

<table class="table" id="movieTable">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Director
            </th>
            <th>
                Genre
            </th>
            <th>
                Year
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<button class="btn" id="btnPrev">Prev</button>
<button class="btn" id="btnNext">Next</button>