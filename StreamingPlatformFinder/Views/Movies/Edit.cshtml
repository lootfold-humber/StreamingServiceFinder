@{
    ViewBag.Title = "Edit";
}

@Scripts.Render("~/Scripts/Movies/edit.js")

<h2>Edit</h2>

<form id="editMovie">
    <div class="form-group">
        <label class="control-label" for="title">Title</label>
        <input class="form-control" type="text" name="title" id="title" required minlength="3" />
    </div>
    <div class="form-group">
        <label class="control-label" for="director">Director</label>
        <input class="form-control" type="text" name="director" id="director" required minlength="3" />
    </div>
    <div class="form-group">
        <label class="control-label" for="genre">Genre</label>
        <input class="form-control" type="text" name="genre" id="genre" required minlength="3" />
    </div>
    <div class="form-group">
        <label class="control-label" for="releaseYear">Year</label>
        <input class="form-control" type="number" name="releaseYear" id="releaseYear" />
    </div>
    <button class="btn btn-primary" type="submit">Save</button>
    <button class="btn" type="reset">Reset</button>
</form>
